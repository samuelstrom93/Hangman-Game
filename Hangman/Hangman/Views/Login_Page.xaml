<Page x:Class="Hangman.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hangman.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" MinHeight="450"
      Title="LoginPage"  Background="Black">

    <Grid>

        <StackPanel HorizontalAlignment="Center" Margin="0,120,0,0" Orientation="Vertical" VerticalAlignment="Center">
            <Label Content="Vem är du?" Foreground="White" HorizontalAlignment="Center"/>
            <TextBox Name="txtBoxUserInput"></TextBox>
            <ComboBox x:Name="cboBoxPlayers" Width="140"/>
            <Button Content="Logga in" Click ="Button_Click" Height="20" Width="152"/>
        </StackPanel>

        <Label Content="Hänga Gubbe" HorizontalAlignment="Center"  VerticalAlignment="Top" Height="115" Width="464" FontSize="72" Foreground="White" Margin="0,70,0,0"/>
        <Button Click="Button_Click_2" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="168" Background="{x:Null}" Content="Är du en ny spelare?" BorderBrush="{x:Null}" Foreground="White" Margin="0,0,0,20"/>
        <Button Click="Button_Click_1" Content="Behöver du hjälp?" Foreground="White" Background="{x:Null}" HorizontalAlignment="Right"  VerticalAlignment="Bottom" Margin="20" Width="115"/>


    </Grid>
</Page>
