<Page x:Class="Hangman.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hangman.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" MinHeight="450"
      Title="LoginPage"  Background="Black">

    <Grid>
        <StackPanel HorizontalAlignment="Center" Margin="0,0,0,0" Orientation="Vertical" VerticalAlignment="Center">
            <Label VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10, 10, 10, 10" Content="Hänga Gubbe"  Height="115" Width="464" FontSize="72" Foreground="White"/>
            <Label Content="Vem är du?" Foreground="White" HorizontalAlignment="Center"/>
            <TextBox Width="152" Name="txtBoxUserInput"></TextBox>
            <Button Margin="10,10,10,10" Content="Logga in" Click ="Button_Click" Height="20" Width="152"/>

            <Label HorizontalAlignment="Center" Foreground ="White" Content="Vill du spela utan användare?"></Label>
            <Button Width="152" Margin="10, 10, 10, 10" Content="Spela Direkt" Click="PlayWithoutUser_Click" Background="Green"></Button>
        </StackPanel>
        
        <Button Click="Button_Click_2" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="168" Background="{x:Null}" Content="Är du en ny spelare?" BorderBrush="{x:Null}" Foreground="White" Margin="0,0,0,20"/>
        <Button Click="Button_Click_1" Content="Behöver du hjälp?" Foreground="White" Background="{x:Null}" HorizontalAlignment="Right"  VerticalAlignment="Bottom" Margin="20" Width="115"/>
        
    </Grid>
</Page>
