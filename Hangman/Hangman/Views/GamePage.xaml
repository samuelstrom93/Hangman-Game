<Page x:Class="Hangman.Views.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hangman.Views"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="800"
      Title="GamePage">

    <Border Background="#DADDD8">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="400" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Margin="0,20,0,0" Grid.Column="1">
                <Border BorderThickness="1" Height="200" Width="400">
                    <Border.Background>
                        <ImageBrush Viewport="0 0 1 1" ViewportUnits="RelativeToBoundingBox" ImageSource="/Assets/Images/hänggubbe1.png"/>
                    </Border.Background>
                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10">
                        <Button Height="20" Width="20" Background="{x:Null}" BorderBrush="{x:Null}" Command="{Binding StopWatchHideCommand}">
                            <Image Source="/Assets/Images/timer.png"></Image>
                        </Button>
                        <TextBlock Text="{Binding Timer}" Padding="4" FontSize="12" Visibility="{Binding IsStopWatchView, Converter={StaticResource BoolToVisibility} }" ></TextBlock>
                    </WrapPanel>

                </Border>
                <Border BorderThickness="1" Background="#EEF0F2" Width="400" Height="60">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="250"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0">
                            <TextBlock Foreground="Green">Antal rätt: 1</TextBlock>
                            <TextBlock Foreground="Red">Antal fel: 0</TextBlock>
                        </StackPanel>
                        <WrapPanel Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top">
                            <Label FontSize="35" Padding="10,0,10,5">_</Label>
                            <Label FontSize="35" Padding="10,0,10,5">_</Label>
                            <Label FontSize="35" Padding="10,0,10,5">_</Label>
                            <Label FontSize="35" Padding="10,0,10,5">_</Label>
                            <Label FontSize="35" Padding="10,0,10,5">_</Label>
                            <Label FontSize="35" Padding="10,0,10,5">_</Label>
                        </WrapPanel>
                    </Grid>
                </Border>
                <Border BorderThickness="1" Background="#ECEBE4" Height="200" Width="400">
                    <WrapPanel Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5">A</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5">B</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5">C</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5">D</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5">E</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5">F</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5">G</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5">H</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5">I</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5">J</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5">K</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5">L</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5">M</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5">N</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5">O</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5">P</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5">Q</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5">R</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5">S</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5">T</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5">U</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5">V</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5">W</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5">X</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5">Y</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5">Z</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5">Å</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5">Ä</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5">Ö</Button>
                    </WrapPanel>
                </Border>
                <Button Background="#ECEBE4" HorizontalAlignment="Right" Padding="35,8,35,8" Margin="0,5,0,5" Click="StartaSpel_click" Command="{Binding GameStartCommand}">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                    START
                </Button>
                <TextBlock HorizontalAlignment="Right" TextDecorations="Underline" Margin="0,0,5,5" PreviewMouseDown="TextBlock_PreviewMouseDown">Behöver du hjälp?</TextBlock>
            </StackPanel>
        </Grid>
    </Border>
</Page>
