<Page x:Class="Hangman.Views.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hangman"

      xmlns:gif ="http://wpfanimatedgif.codeplex.com"
      
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="GamePage">


    <Border>

        <!--
        xmlns:gif ="https://github.com/XamlAnimatedGif/XamlAnimatedGif"-->
        
        <Grid VerticalAlignment="Center">
            <Grid>
                <!--Definitioner för grid-->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="450*" />
                    <ColumnDefinition Width="400*" />
                    <ColumnDefinition Width="450*" />
                </Grid.ColumnDefinitions>
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="200*"/>
                    <RowDefinition Height="400*"/>
                    <RowDefinition Height="100*"/>
                    <RowDefinition Height="100*"/>
                    <RowDefinition Height="100*"/>
                </Grid.RowDefinitions>

                <!--Ordet som spelaren gissar på-->
                <Grid Grid.Column="0" Grid.ColumnSpan="3" >
                    <StackPanel>
                        <Label Style="{StaticResource PageTitleLabel}" VerticalAlignment="Top">DITT ORD:</Label>
                            <Border Style="{StaticResource StandardBorder}" Width="400" Height="100" Margin="0, 0 ,0,20" >
                            <WrapPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="{Binding GameEngine.AnswerForPlayer}" FontSize="60" TextAlignment="Center"/>
                            </WrapPanel>
                            </Border>
                    </StackPanel>
                </Grid>
                


                <!--Klockan-->
                <Grid Grid.Column="0" Grid.Row="2" VerticalAlignment="Top" Margin="0, 0, 40, 0" HorizontalAlignment="Right" >
                    <Frame Content="{Binding StopWatchUC}"></Frame>
                </Grid>

                <!-- Spelbilden med hjärtan-->
                <Grid Grid.Column="0" Grid.Row="1"  VerticalAlignment="Center" HorizontalAlignment="Right">
                    <Border Style="{StaticResource StandardBorder}" BorderThickness="0" Height="250" Width="300">
                        <Border.Background>
                            <ImageBrush ImageSource="{Binding GameEngine.ImageForGameStage}"/>
                        </Border.Background>
                    </Border>
                </Grid>

                
                
                <!--Extraliven-->
                <Grid Grid.Column="0" Grid.Row="0"  HorizontalAlignment="Right" >
                    <WrapPanel>
                        <Image gif:ImageBehavior.AnimatedSource ="Gifs/HeartBreak0.gif"  Height="30" Width="30" gif:ImageBehavior.AnimationDuration ="{Binding GameEngine.extraliv1}"/>
                        <Image gif:ImageBehavior.AnimatedSource ="Gifs/HeartBreak0.gif"  Height="30" Width="30" gif:ImageBehavior.AnimationDuration ="{Binding GameEngine.extraliv2}"/>
                        <Image gif:ImageBehavior.AnimatedSource ="Gifs/HeartBreak0.gif"  Height="30" Width="30" gif:ImageBehavior.AnimationDuration ="{Binding GameEngine.extraliv3}"/>
                        <Image gif:ImageBehavior.AnimatedSource ="Gifs/HeartBreak0.gif"  Height="30" Width="30" gif:ImageBehavior.AnimationDuration ="{Binding GameEngine.extraliv4}"/>
                        <Image gif:ImageBehavior.AnimatedSource ="Gifs/HeartBreak0.gif"  Height="30" Width="30" gif:ImageBehavior.AnimationDuration ="{Binding GameEngine.extraliv5}"/>
                        <Image gif:ImageBehavior.AnimatedSource ="Gifs/HeartBreak0.gif"  Height="30" Width="30" gif:ImageBehavior.AnimationDuration ="{Binding GameEngine.extraliv6}"/>
                        <Image gif:ImageBehavior.AnimatedSource ="Gifs/HeartBreak0.gif"  Height="30" Width="30" gif:ImageBehavior.AnimationDuration ="{Binding GameEngine.extraliv7}"/>
                        <Image gif:ImageBehavior.AnimatedSource ="Gifs/HeartBreak0.gif"  Height="30" Width="30" gif:ImageBehavior.AnimationDuration ="{Binding GameEngine.extraliv8}"/>
                        <Image gif:ImageBehavior.AnimatedSource ="Gifs/HeartBreak0.gif"  Height="30" Width="30" gif:ImageBehavior.AnimationDuration ="{Binding GameEngine.extraliv9}"/>
                        <Image gif:ImageBehavior.AnimatedSource ="Gifs/HeartBreak0.gif"  Height="30" Width="30" gif:ImageBehavior.AnimationDuration ="{Binding GameEngine.extraliv10}"/>
                    </WrapPanel>
                </Grid>




                <!--BokstavsKeyboard -->
                <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource StandardBorder}"  Height="250" Width="400" Background="#FFF5E5F5" Grid.ColumnSpan="3">
                    <Frame Content="{Binding KeyboardUC}"></Frame>
                </Border>
                
                <!-- Gissa direkt + ledtråd-->
                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0" Grid.Row="3" Grid.Column="1">
                    <TextBox Style="{StaticResource UserInputTxtBox}" Text="{Binding GuessDirectlyText, Mode=TwoWay}" TextAlignment="Center" Width="100" Height="30" Margin="0,0,5,0" FontSize="20" DataContext="{Binding KeyboardViewModel}"></TextBox>
                    <Button DataContext="{Binding KeyboardViewModel}" Style="{StaticResource StandardButton}" Command="{Binding GuessDirectlyCommand}" Content="Gissa direkt" Padding="20,0,20,0" Margin="2,7,0,7" HorizontalAlignment="Left" BorderBrush="{x:Null}" FontWeight="Bold"  Width="100" Height="25" Cursor="Hand" ></Button>
                </WrapPanel>

                
                <!--GIF-->
                <Grid Grid.Row="2" Grid.Column="2" HorizontalAlignment="Left">
                    <!--      <Image Height="100" gif:AnimationBehavior.SourceUri="Gifs/GameOn.gif" />-->
                </Grid>
                
                <!--Startknapp-->
                <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3">
                    <Button IsEnabled="{Binding GameEngine.IsStartBtnClickable}" Width="400" Height="60" Background="Green" HorizontalAlignment="Center" Padding="25, 5, 25, 5"  Command="{Binding GameStartCommand}" Foreground="White" BorderBrush="{x:Null}" VerticalAlignment="Center" Cursor="Hand" FontSize="24">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                        START
                    </Button>
                </Grid>

                <!--Ledtråd-->
                <Grid Grid.Row="4" Grid.Column="1" HorizontalAlignment="Right">
                    <StackPanel Width="auto" Orientation="Vertical" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                        <Frame Content="{Binding HintUC}"></Frame>
                    </StackPanel>
                </Grid>
                
                <!--Hjälpknapp-->
                <Grid Grid.Row="1" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Bottom">
                    <Button Style="{StaticResource HelpButton}"  HorizontalAlignment="Right" Command="{Binding NavigateToPageByParameterCommand}" CommandParameter="{x:Static local:ApplicationPage.GameIntro}"  />
                </Grid>
                

                
            </Grid>
            
            <!--Frame för GameStart-->
            <Frame Content="{Binding GameStartPage}"/>
            <Frame Width="800" Content="{Binding KeyboardViewModel.GameEndPage}"></Frame>
            
        </Grid>
    </Border>
</Page>
