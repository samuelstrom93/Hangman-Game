<Page x:Class="Hangman.Views.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hangman.Views"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="800"
      
      Title="GamePage">

    <Border Background="#DADDD8">
        <Grid>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="400" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Grid.ColumnSpan="4">
                    <Border>
                        <DockPanel>
                            <Menu DockPanel.Dock="Top">
                                <MenuItem x:Name="MenuShowName" Header="{Binding PlayerName, FallbackValue=UserName}">
                                    <MenuItem Header="Logga ut" Click="mnuLogOut" />
                                    <MenuItem Header="Ta bort min användare" Click="mnuDeleteUser"/>
                                    <MenuItem Header="Byt användarnamn" Click="mnuUpdateUser" />
                                    <Separator />
                                    <MenuItem Header="Spela" />
                                </MenuItem>
                            </Menu>
                        </DockPanel>
                    </Border>
                </StackPanel>



                <StackPanel Margin="0,20,0,0" Grid.Column="1">
                    <Border BorderThickness="1" Height="200" Width="400">
                        <Border.Background>
                            <ImageBrush Viewport="0 0 1 1" ViewportUnits="RelativeToBoundingBox" ImageSource="/Assets/Images/hänggubbe1.png"/>
                        </Border.Background>
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10">
                            <Button Height="20" Width="20" Background="{x:Null}" BorderBrush="{x:Null}" Command="{Binding StopWatchHideCommand}">
                                <Image Source="/Assets/Images/timer.png"/>
                            </Button>
                            <TextBlock Text="{Binding Timer}" Padding="4" FontSize="12" Visibility="{Binding IsStopWatchView, Converter={StaticResource BoolToVisibility}}" />
                        </WrapPanel>

                    </Border>
                    <Border BorderThickness="1" Background="#EEF0F2" Width="400" Height="60">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="250"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <TextBlock Foreground="Green" Grid.Row="0" Grid.Column="0"><Run Text="Antal rätt:"/></TextBlock>
                                <TextBlock Foreground="Green" Grid.Row="0" Grid.Column="1" Text="{Binding numberOfCorrectTries_text}" Margin="10,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <TextBlock Foreground="Red" Grid.Row="1" Grid.Column="0"><Run Text="Antal fel:"/></TextBlock>
                                <TextBlock Foreground="Red" Grid.Row="1" Grid.Column='1' Text="{Binding numberOfIncorrectTries_text}" Margin="10,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>


                            </Grid>

                            <WrapPanel Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top">
                                <Label FontSize="35" Padding="10,0,10,5" Content="_"/>
                                <Label FontSize="35" Padding="10,0,10,5" Content="_"/>
                                <Label FontSize="35" Padding="10,0,10,5" Content="_"/>
                                <Label FontSize="35" Padding="10,0,10,5" Content="_"/>
                                <Label FontSize="35" Padding="10,0,10,5" Content="_"/>
                                <Label FontSize="35" Padding="10,0,10,5" Content="_"/>
                            </WrapPanel>
                        </Grid>
                    </Border>
                    <Border BorderThickness="1" Background="#ECEBE4" Height="200" Width="400">
                        <WrapPanel Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center">

                            <Button HorizontalAlignment="Center" MinWidth="25"  Margin="7" Padding="5" Click="Letter_Click" Content="A" />
                            <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5" Click="Letter_Click" Content="B" />
                            <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5" Click="Letter_Click" Content="C" />
                            <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"  Click="Letter_Click" Content="D"/>
                            <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"  Click="Letter_Click" Content="E"/>
                            <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"   Click="Letter_Click" Content="F"/>
                            <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"   Click="Letter_Click" Content="G"/>
                            <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"   Click="Letter_Click" Content="H"/>
                            <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"  Click="Letter_Click" Content="I"/>
                            <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"   Click="Letter_Click" Content="J"/>
                            <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"   Click="Letter_Click" Content="K"/>
                            <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"   Click="Letter_Click" Content="L"/>
                            <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"   Click="Letter_Click" Content="M"/>
                            <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"  Click="Letter_Click" Content="N"/>
                            <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"  Click="Letter_Click" Content="O"/>
                            <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"   Click="Letter_Click" Content="P"/>
                            <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"   Click="Letter_Click" Content="Q"/>
                            <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"   Click="Letter_Click" Content="R"/>
                            <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"  Click="Letter_Click" Content="S"/>
                            <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"   Click="Letter_Click" Content="T"/>
                            <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"   Click="Letter_Click" Content="U"/>
                            <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"   Click="Letter_Click" Content="V"/>
                            <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"   Click="Letter_Click" Content="W"/>
                            <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"   Click="Letter_Click" Content="X"/>
                            <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"   Click="Letter_Click" Content="Y"/>
                            <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"   Click="Letter_Click" Content="Z"/>
                            <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"   Click="Letter_Click" Content="Å"/>
                            <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"   Click="Letter_Click" Content="Ä"/>
                            <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"   Click="Letter_Click" Content="Ö"/>

                        </WrapPanel>

                    </Border>
                    <StackPanel Orientation="Horizontal">
                        <Button Background="#ECEBE4" HorizontalAlignment="Left" Padding="25, 5, 25, 5"  Command="{Binding GameStartCommand}" Content="START">
                            <Button.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                        <Button Background="#ECEBE4" HorizontalAlignment="Right" Padding="20,0,20,0" Margin="242,5,5,5" BorderBrush="{x:Null}" Content="Hjälp" Click="Help_Click">
                            <Button.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>
                    <WrapPanel Orientation="Horizontal">

                        <Button Background="#ECEBE4" Padding="20,0,20,0" Margin="2,7,0,7" HorizontalAlignment="Left" Command="{Binding ShowHintCommand}" BorderBrush="{x:Null}" Content="Ledtråd">
                            <Button.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                        <TextBlock Margin="10, 5, 5, 5" FontWeight="Bold" Text="{Binding IWord.Hint}" Visibility="{Binding IsHintShown, Converter={StaticResource BoolToVisibility}}" HorizontalAlignment="Left"/>
                    </WrapPanel>
                </StackPanel>
            </Grid>
            <Frame x:Name="GameStart" />
        </Grid>
    </Border>
</Page>
