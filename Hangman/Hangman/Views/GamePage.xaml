<Page x:Class="Hangman.Views.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hangman.Views"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      
      Title="GamePage">


    <Border BorderThickness="0" Style="{StaticResource StandardBorder}" 
            VerticalAlignment="Center" 
            Height="1080"
            Width="1920"
            HorizontalAlignment="Center">
        
        <Grid VerticalAlignment="Center">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="400" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="600"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>

                <StackPanel Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                    
                    <Border Style="{StaticResource StandardBorder}" BorderThickness="0" Height="200" Width="400">
                        <Border.Background>
                            <ImageBrush Viewport="0 0 1 1" ViewportUnits="RelativeToBoundingBox" ImageSource="{Binding ImageForGameStage}"/>
                     </Border.Background>

                        <Frame Content="{Binding StopWatchUC}"></Frame>
                    </Border>
                    
                    <Border Style="{StaticResource BackgroundBorder}" Width="auto" Height="auto">
                        <StackPanel Margin="0,10,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <TextBlock Foreground="Green" Grid.Row="0" Grid.Column="0" FontSize="24"><Run Text="Antal rätt:"/></TextBlock>
                                <TextBlock Foreground="Green" Grid.Row="0" Grid.Column="1" Text="{Binding NumberOfCorrectTries_text}" Margin="10,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>
                                <TextBlock Foreground="Red" Grid.Row="1" Grid.Column="0" FontSize="24"><Run Text="Antal fel:"/></TextBlock>
                                <TextBlock Foreground="Red" Grid.Row="1" Grid.Column='1' Text="{Binding NumberOfIncorrectTries_text}" Margin="10,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>

                            </Grid>

                            <WrapPanel Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center">
                                <TextBlock Text="{Binding AnswerForPlayer}" FontSize="26"/>
                            </WrapPanel>
                            
                        </Grid>
                        </StackPanel>
                    </Border>
                    
                    <Border BorderThickness="0" Style="{StaticResource BackgroundBorder}" Height="auto" Width="auto">
                        <Frame Content="{Binding KeyboardUC}"></Frame>
                    </Border>

                    <WrapPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical" Margin="0,10,0,11" HorizontalAlignment="Center" VerticalAlignment="Center">

                        <Button IsEnabled="{Binding IsStartBtnClickable}" Width="400" Background="Green" HorizontalAlignment="Center" Padding="25, 5, 25, 5"  Command="{Binding GameStartCommand}" Foreground="White" BorderBrush="{x:Null}" VerticalAlignment="Center" FontSize="24">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Button.Resources>
                            START
                        </Button>

                    </WrapPanel>
                </StackPanel>
                
                <StackPanel Width="auto" Orientation="Vertical" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                    
                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <TextBox x:Name="guessingWordText" TextAlignment="Center" Width="100" Height="30" Margin="0,0,5,0" FontSize="20"></TextBox>
                        <Button Style="{StaticResource StandardButton}" Click="GuessDirectlyBtn_Click" Content="Gissa direkt" Padding="20,0,20,0" Margin="2,7,0,7" HorizontalAlignment="Left" BorderBrush="{x:Null}" FontWeight="Bold" Width="100" Height="25" Cursor="Hand" ></Button>
                    </WrapPanel>
                    
                        <Frame Content="{Binding HintUC}"></Frame>

                    <Button Background="{x:Null}" Padding="20,2,20,2" Margin="0,7,0,5" HorizontalAlignment="Right" Click="GameIntroPage_Click" Content="Hjälp?" BorderBrush="White" Width="100" Height="25">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Grid>
            <Frame x:Name="Overray"/>
        </Grid>
    </Border>
</Page>
