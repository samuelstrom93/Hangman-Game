<Page x:Class="Hangman.Views.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hangman.Views"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="800"
      Title="GamePage">

    <Border Background="#DADDD8">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="400" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Margin="0,20,0,0" Grid.Column="1">
                <Border BorderThickness="1" Height="200" Width="400">
                    <Border.Background>
                        <ImageBrush Viewport="0 0 1 1" ViewportUnits="RelativeToBoundingBox" ImageSource="/Assets/Images/hänggubbe1.png"/>
                    </Border.Background>
                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10">
                        <Button Height="20" Width="20" Background="{x:Null}" BorderBrush="{x:Null}" Command="{Binding StopWatchHideCommand}">
                            <Image Source="/Assets/Images/timer.png"></Image>
                        </Button>
                        <TextBlock Text="{Binding Timer}" Padding="4" FontSize="12" Visibility="{Binding IsStopWatchView, Converter={StaticResource BoolToVisibility} }" ></TextBlock>
                    </WrapPanel>

                </Border>
                <Border BorderThickness="1" Background="#EEF0F2" Width="400" Height="60">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="250"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0">
                            <TextBlock Foreground="Green">Antal rätt:</TextBlock>
                            <TextBlock Text="{Binding numberOfCorrectTries_text}"></TextBlock>
                            <TextBlock Foreground="Red">Antal fel</TextBlock>
                            <TextBlock Text="{Binding numberOfIncorrectTries_text}"></TextBlock>
                        </StackPanel>
                        <WrapPanel Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top">
                            <Label FontSize="35" Padding="10,0,10,5">_</Label>
                            <Label FontSize="35" Padding="10,0,10,5">_</Label>
                            <Label FontSize="35" Padding="10,0,10,5">_</Label>
                            <Label FontSize="35" Padding="10,0,10,5">_</Label>
                            <Label FontSize="35" Padding="10,0,10,5">_</Label>
                            <Label FontSize="35" Padding="10,0,10,5">_</Label>
                        </WrapPanel>
                    </Grid>
                </Border>
                <Border BorderThickness="1" Background="#ECEBE4" Height="200" Width="400">
                    <WrapPanel Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center">

                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5" Command="{Binding SelectedKeyCommandA}" IsEnabled="{Binding IsLetterClicked, FallbackValue=true}"  Click="Letter_Click" >A</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"  Command="{Binding SelectedKeyCommandB}" IsEnabled="{Binding IsLetterClicked, FallbackValue=true}" Click="Letter_Click" >B</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"  Command="{Binding SelectedKeyCommandC}" Click="Letter_Click" >C</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"  Command="{Binding SelectedKeyCommandD}" Click="Letter_Click">D</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"  Command="{Binding SelectedKeyCommandE}" Click="Letter_Click">E</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"  Command="{Binding SelectedKeyCommandF}" Click="Letter_Click">F</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"  Command="{Binding SelectedKeyCommandG}" Click="Letter_Click">G</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"  Command="{Binding SelectedKeyCommandH}" Click="Letter_Click">H</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"  Command="{Binding SelectedKeyCommandI}" Click="Letter_Click">I</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"  Command="{Binding SelectedKeyCommandJ}" Click="Letter_Click">J</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"  Command="{Binding SelectedKeyCommandK}" Click="Letter_Click">K</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"  Command="{Binding SelectedKeyCommandL}" Click="Letter_Click">L</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"  Command="{Binding SelectedKeyCommandM}" Click="Letter_Click">M</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"  Command="{Binding SelectedKeyCommandN}" Click="Letter_Click">N</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"  Command="{Binding SelectedKeyCommandO}" Click="Letter_Click">O</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"  Command="{Binding SelectedKeyCommandP}" Click="Letter_Click">P</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"  Command="{Binding SelectedKeyCommandQ}" Click="Letter_Click">Q</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"  Command="{Binding SelectedKeyCommandR}" Click="Letter_Click">R</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"  Command="{Binding SelectedKeyCommandS}" Click="Letter_Click">S</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"  Command="{Binding SelectedKeyCommandT}" Click="Letter_Click">T</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"  Command="{Binding SelectedKeyCommandU}" Click="Letter_Click">U</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"  Command="{Binding SelectedKeyCommandV}" Click="Letter_Click">V</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"  Command="{Binding SelectedKeyCommandW}" Click="Letter_Click">W</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"  Command="{Binding SelectedKeyCommandX}" Click="Letter_Click">X</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"  Command="{Binding SelectedKeyCommandY}" Click="Letter_Click">Y</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"  Command="{Binding SelectedKeyCommandZ}" Click="Letter_Click">Z</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"  Command="{Binding SelectedKeyCommandOO}" Click="Letter_Click">Å</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"  Command="{Binding SelectedKeyCommandAA}" Click="Letter_Click">Ä</Button>
                        <Button HorizontalAlignment="Center" MinWidth="25" Margin="7" Padding="5"  Command="{Binding SelectedKeyCommandAE}" Click="Letter_Click">Ö</Button>

                    </WrapPanel>
                    
                </Border>
                <StackPanel Orientation="Horizontal">
                <Button Background="#ECEBE4" HorizontalAlignment="Left" Padding="25, 5, 25, 5"  Command="{Binding GameStartCommand}">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                    START
                </Button>
                    <TextBlock HorizontalAlignment="Right"  TextDecorations="Underline" Margin="215,5,5,5" PreviewMouseDown="TextBlock_PreviewMouseDown">Behöver du hjälp?</TextBlock>
                </StackPanel>
                <WrapPanel Orientation="Vertical">
                    
                    <Button Background="#ECEBE4" Padding="20,0,20,0" Margin="2,7,0,7" HorizontalAlignment="Left" Command="{Binding ShowHintCommand}">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources> Ledtråd
                    </Button>
                    <TextBlock Margin="5, 5, 5, 5" FontWeight="Bold" Text="{Binding IWord.Hint}" Visibility="{Binding IsHintShown, Converter={StaticResource BoolToVisibility}}" HorizontalAlignment="Left"></TextBlock>
                </WrapPanel>
                
                
                
            </StackPanel>
        </Grid>
    </Border>
</Page>
