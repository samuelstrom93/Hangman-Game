<Page x:Class="Hangman.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hangman.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" MinHeight="450"
      Title="LoginPage">

    <Border >

        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="110"/>
                <RowDefinition Height="150"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>

            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="170"/>
                <ColumnDefinition Width="170"/>
                <ColumnDefinition Width="170"/>
                <ColumnDefinition Width="170"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="0" Grid.ColumnSpan="4" HorizontalAlignment="Center" VerticalAlignment="Top">
                <Label Style="{StaticResource StandardHeader}" FontFamily="Segoe UI Light" Content="Hänga Gubbe"/>
            </Grid>

            <Border 
                Width="250"
                Height="120" 
                Style="{StaticResource ListItemBorder}" 
                Grid.Row="1"  
                Grid.Column="1" 
                Grid.ColumnSpan="2" 
                CornerRadius="10" 
                Margin="10, 10, 10, 10">
                
                <StackPanel HorizontalAlignment="Center" Orientation="Vertical" VerticalAlignment="Center" >
                    <Label Style="{StaticResource PageTitleLabel}" Content="Logga in på din användare" FontWeight="Bold"></Label>
                    <TextBox Style="{StaticResource UserInputTxtBox}" Text="{Binding PlayerName}"></TextBox>
                    <Button Width="100" Height="30" Style="{StaticResource StandardButton}" Content="Logga in" Command ="{Binding TryLogIn}" />
                </StackPanel>
            </Border>

            <Border   Grid.Row="1" Grid.Column="3"  Grid.RowSpan="3"   VerticalAlignment="Top" Margin="0, 15, 0, 0">
                <StackPanel>
                    <Label FontSize="12" Style="{StaticResource StandardLabel}"  Content="Vill du spela utan användare?"></Label>
                    <Button  Width="125" Height="35"  Style="{StaticResource StandardButton}" Foreground="White" Content="Spela direkt" Command="{Binding PlayWithoutUser}"></Button>
                    <Label FontSize="12"  Style="{StaticResource StandardLabel}" Content="Är du en ny spelare?" ></Label>
                    <Button Width="125" Height="35" Foreground="White" Style="{StaticResource StandardButton}" Content="Skapa en användare" Command="{Binding GoToCreateUser}" />
                </StackPanel>
            </Border>


            <Border Grid.Row="3" Grid.Column="4">
                <StackPanel>
                    <Label FontSize="12"  Style="{StaticResource StandardLabel}" Content="Vill du läsa reglerna?" ></Label>
                    <Button Width="120" Height="30" Style="{StaticResource StandardButton}" Content="Såhär spelar du" HorizontalAlignment="Center" Command="{Binding GoToGameIntro}" />
                </StackPanel>
            </Border>


            <Grid Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Frame x:Name="ErrorFrame"></Frame>
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Name="ErrorMessage" Text="{Binding ErrorMessage}"></TextBlock>
            </Grid>

        </Grid>
    </Border>
</Page>
