<UserControl x:Class="Hangman.Views.UCsForGamePage.HintUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hangman.Views.UCsForGamePage"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">

            <TextBlock Margin="10, 5, 5, 5" FontWeight="Bold" Text="{Binding Hint}" Visibility="{Binding IsHintShown, Converter={StaticResource BoolToVisibility}}" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
            <Button  Style="{StaticResource StandardButton}" Padding="20,0,20,0" Margin="2,7,0,7" HorizontalAlignment="Left" Command="{Binding ShowHintCommand}" Width="100" Height="25" Cursor="Hand">
            Ledtråd
            </Button>
        </WrapPanel>
    </Grid>
</UserControl>
