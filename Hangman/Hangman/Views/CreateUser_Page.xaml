<Page x:Class="Hangman.Views.CreateUser_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hangman.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" MinHeight="450"
      Title="CreateUser_Page" Background="Black">


    <Grid >

        <StackPanel HorizontalAlignment="Center" Orientation="Vertical" VerticalAlignment="Center" Margin="0,0,0,0">
            <Label Content="Välj ditt användarnamn:" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,0"/>
            <StackPanel  Orientation="Horizontal">
                <TextBox Name="txtBoxWantedName" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="152"/>
            </StackPanel>
            <Button Click="Button_CreateUser_Click" Content="Registrera" Width="152" Height="20" HorizontalAlignment="Left"/>


        </StackPanel>

        <Label Content="Hänga Gubbe" HorizontalAlignment="Center" VerticalAlignment="Top" Height="115" Width="464" FontSize="72" Foreground="White" Margin="0,70,0,0"/>
        <Button Click="Button_BackToLogin_Click" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="168" Background="{x:Null}" Content="Inte första gången?" BorderBrush="{x:Null}" Foreground="White" Margin="0,0,0,20"/>
        <Button Click="Button_Help_Click" Content="Behöver du hjälp?" Foreground="White" Background="{x:Null}" HorizontalAlignment="Right"  VerticalAlignment="Bottom" Margin="20" Width="115"/>


    </Grid>

</Page>
