<UserControl x:Class="Hangman.Views.ErrorMessage.ErrorMessageUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hangman.Views.ErrorMessage"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border Background="White"
            BorderBrush="Red"
            BorderThickness="2"
            CornerRadius="10"
            Width="160"
            Height="70">
        
        <Grid HorizontalAlignment="Center" VerticalAlignment="Top">
            <TextBlock FontWeight="Bold" FontSize="10" Foreground="Red" Margin="10, 10, 10, 10">Ett fel har uppstått!</TextBlock>
        </Grid>

    </Border>
</UserControl>
