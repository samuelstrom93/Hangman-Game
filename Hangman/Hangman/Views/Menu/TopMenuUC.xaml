<UserControl x:Class="Hangman.Views.Menu.TopMenuUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hangman.Views.Menu"
             mc:Ignorable="d" d:DesignWidth="800">
    <Grid>
        <Border>
            <DockPanel>
                <Menu DockPanel.Dock="Top">
                    <MenuItem Name="MenuShowName" Header="{Binding PlayerName, FallbackValue=UserName}">
                        <MenuItem Header="Logga ut" Click="mnuLogOut" />
                        <MenuItem Header="Ta bort min användare" Click="mnuDeleteUser"/>
                        <MenuItem Header="Byt användarnamn" Click="mnuUpdateUser" />
                        <Separator />
                        <MenuItem Header="Spela" />
                    </MenuItem>
                </Menu>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
