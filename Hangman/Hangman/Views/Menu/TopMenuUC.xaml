<UserControl x:Class="Hangman.Views.Menu.TopMenuUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hangman.Views.Menu"
             mc:Ignorable="d" d:DesignWidth="800"
             Visibility="{Binding Visibility}">
    <Grid Visibility="{Binding Visibility}" Background="Transparent">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border BorderBrush="Black" BorderThickness="0, 0, 0, 1" CornerRadius="0, 0, 0, 0" Background="#4e8895"  Opacity="50">
            
        </Border>
        <Border Grid.Column="2" BorderBrush="black" Background="#4e8895" Opacity="50" BorderThickness="0, 0, 1, 1" CornerRadius="2">
        </Border>
        
        <Grid Grid.Column="1" Grid.ColumnSpan="2">
            <Label Margin="0, 0, 20, 0"  FontSize="20" FontStyle="Italic" HorizontalAlignment="Right" Foreground="White" VerticalAlignment="Center">Hänga Gubbe</Label>
        </Grid>

        
        <Border  Grid.Column="1">
            <DockPanel>
                <Border Background="Transparent" BorderBrush="black" BorderThickness="1, 1, 1, 0" CornerRadius="2">
                    <Menu Background="Transparent" DockPanel.Dock="Top" Padding="20, 0, 20, 0" HorizontalContentAlignment="Center" HorizontalAlignment="Center">
                        <MenuItem  FontSize="16"  x:Name="MenuShowName" Padding="5" Margin="10,0,10,0" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" Header="{Binding PlayerName, FallbackValue=UserName}">
                        </MenuItem>
                    </Menu>
                </Border>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
