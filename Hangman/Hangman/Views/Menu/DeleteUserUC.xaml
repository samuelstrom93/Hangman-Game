<UserControl x:Class="Hangman.Views.Menu.DeleteUserUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hangman.Views.Menu"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">


    <Border
        Style="{DynamicResource ListItemBorder}"
                    Height="100"
                    Width="300"
                    CornerRadius="10">
        <Grid>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                            >
                <TextBlock FontFamily="Calibri Light" TextAlignment="Center"><Run Text="Skriv in ditt användarnamn för "/><LineBreak/><Run Text="att ta bort din användare:"/></TextBlock>
                <TextBox Style="{StaticResource UserInputTxtBox}" x:Name="txtBoxInsertUser" />
                    <Button Style="{StaticResource StandardButton}"  Content="Ta bort mig." Click="Button_Click"/>
                    <TextBlock x:Name="txtBlockErrorMessage" Text="{Binding Message}"/>
                </StackPanel>
            </Grid>

        </Border>
</UserControl>
