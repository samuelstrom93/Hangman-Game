<UserControl x:Class="Hangman.Views.Menu.DeleteUserUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hangman.Views.Menu"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="400">


    <Border
        Style="{DynamicResource ListItemBorder}">
        <Border>
            <Grid>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                            >
                    <Label Content="Skriv in ditt användarnamn för att ta bort din användare:"/>
                    <TextBox x:Name="txtBoxInsertUser" Width="200"/>
                    <Button Style="{StaticResource StandardButton}" Width="200" Margin="5, 5, 5, 5" Content="Ta bort mig." Click="Button_Click"/>
                    <TextBlock x:Name="txtBlockErrorMessage" Text="{Binding Message}"/>
                </StackPanel>
            </Grid>

        </Border>
    </Border>

</UserControl>
