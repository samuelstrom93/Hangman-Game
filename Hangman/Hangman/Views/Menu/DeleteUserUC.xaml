<UserControl x:Class="Hangman.Views.Menu.DeleteUserUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hangman.Views.Menu"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="400">

    <StackPanel Margin="0, 0, 0, 0" Grid.Column="0">
        <Border
            Background="White"
            Width="300"
            MinHeight="100"
            CornerRadius="5"
            Margin="0, 0, 0, 0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

            <Grid>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                            Background="AliceBlue">
                    <TextBlock Text="Skriv in ditt användarnamn för att ta bort din användare:"/>
                    <TextBox x:Name="txtBoxInsertUser"/>
                    <Button Content="Ta bort mig." Click="Button_Click"/>
                    <TextBlock x:Name="txtBlockErrorMessage" Text="{Binding Message}"/>
                </StackPanel>
            </Grid>

        </Border>
    </StackPanel>
</UserControl>