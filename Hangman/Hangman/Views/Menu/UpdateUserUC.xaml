<UserControl x:Class="Hangman.Views.Menu.UpdateUserUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hangman.Views.Menu"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="400">

    <Border
            Style="{DynamicResource ListItemBorder}">

        <Grid>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Label HorizontalAlignment="Center">Skriv in önskat nytt namn</Label>
                <TextBox  Width="200" x:Name="txtBoxInsertName"/>
                <Button Style="{DynamicResource StandardButton}" Margin="5, 5, 5, 5" Content="Byt Namn!" Click="Button_Click"/>
                <TextBlock x:Name="txtBlockErrorMessage" Text="{Binding Message}"/>
            </StackPanel>
        </Grid>

    </Border>
</UserControl>
