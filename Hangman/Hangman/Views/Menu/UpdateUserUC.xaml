<UserControl x:Class="Hangman.Views.Menu.UpdateUserUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hangman.Views.Menu"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">

    <Border
            Style="{DynamicResource OverlayBorder}"
            Height="100"
            Width="300"
            CornerRadius="10"
        >

        <Grid
            Height="100"
            Width="300">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Style="{StaticResource StandardFontTextBlock}" >Skriv in önskat nytt namn</TextBlock>
                <TextBox  Style="{StaticResource UserInputTxtBox}" x:Name="txtBoxInsertName"/>
                <Button Style="{DynamicResource StandardButton}"  Content="Byt Namn!" Click="Button_Click"/>
                <TextBlock x:Name="txtBlockErrorMessage" Text="{Binding Message}"/>
            </StackPanel>
        </Grid>

    </Border>
</UserControl>
