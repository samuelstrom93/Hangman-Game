<UserControl x:Class="Hangman.Views.Menu.UpdateUserUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hangman.Views.Menu"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="400">

    <StackPanel Margin="0, 0, 0, 0" Grid.Column="0">
        <Border

            Width="300"
            MinHeight="100"
            CornerRadius="5"
            Margin="0, 0, 0, 0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

            <Grid>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock ><Run Text="Skriv in önskat nytt namn:"/></TextBlock>
                    <TextBox x:Name="txtBoxInsertName"/>
                    <Button Content="Byt Namn!" Click="Button_Click"/>
                    <TextBlock x:Name="txtBlockErrorMessage" Text="{Binding Message}"/>
                </StackPanel>
            </Grid>

        </Border>
    </StackPanel>
</UserControl>
