<Page x:Class="Hangman.Views.UserSettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hangman.Views"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="UserSettingsPage">
    
    <Border Style="{StaticResource BackgroundBorder}">
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition Height="40" />
                <RowDefinition Height="140" />
                <RowDefinition Height="40" />
                <RowDefinition Height="200"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400" />
                <ColumnDefinition Width="400" />
            </Grid.ColumnDefinitions>
            
            
            <Border Grid.RowSpan="5"
                    Grid.ColumnSpan="2"
                    Style="{StaticResource ListItemBorder}"
                    CornerRadius="10">
            </Border>

            <Grid Grid.Row="0" Grid.ColumnSpan="2" >
                <Label  Style="{StaticResource StandardHeader}"> DIN ANVÄNDARE</Label>
            </Grid>
            
            <Grid Grid.Row="1" Grid.Column="0">
                <Label VerticalAlignment="Bottom" Style="{StaticResource PageTitleLabel}" >ÄNDRA NAMN</Label>
            </Grid>

            <Grid Grid.Row="3" Grid.Column="0">
                <Label VerticalAlignment="Bottom" Style="{StaticResource PageTitleLabel}">TA BORT DIN ANVÄNDARE</Label>
            </Grid>


            <Grid Grid.Row="2" Grid.Column="0" Margin="10, 10, 10, 10" VerticalAlignment="Top">
                <Border
            Style="{DynamicResource BackgroundBorder}"
            Height="100"
            Width="300"
            CornerRadius="10">

            <Grid
            Height="100"
            Width="300">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Style="{StaticResource StandardFontTextBlock}">Skriv in önskat nytt namn</TextBlock>
                            <TextBox  TextAlignment="Center" Style="{StaticResource UserInputTxtBox}" Text="{Binding NewName}"/>
                            <Button Style="{DynamicResource StandardButton}"  Content="Byt Namn!" Command="{Binding UpdateUserCommand}"/>
                            <TextBlock x:Name="txtBlockUpdateMessage" Foreground="Red" Text="{Binding UpdateMessage}"/>
                        </StackPanel>
                    </Grid>
                </Border>
                <Frame x:Name="ChangeUserFrame" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top"></Frame>
            </Grid>

            <Grid Grid.Row="1" Grid.Column="1" Grid.RowSpan="4" Margin="10, 10, 10, 10">
                <Border>
                </Border>
                <Frame x:Name="UserStatsFrame" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top"></Frame>
            </Grid>

            <Grid Grid.Row="4" Grid.Column="0" VerticalAlignment="Top">
                <Border
                    Style="{DynamicResource  BackgroundBorder}"
                    Height="120"
                    Width="300"
                    CornerRadius="10">
                    <Grid>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                            >
                            <TextBlock Style="{StaticResource StandardFontTextBlock}"><Run Text="Skriv in ditt användarnamn för "/><LineBreak/><Run Text="att ta bort din användare:"/></TextBlock>
                            <TextBox TextAlignment="Center" Style="{StaticResource UserInputTxtBox}" Text="{Binding NameCheck}" />
                            <Button Style="{StaticResource StandardButton}"  Content="Ta bort mig" Command="{Binding DeleteUserCommand}"/>
                            <TextBlock x:Name="txtBlockDeleteMessage" Foreground="Red" Text="{Binding DeleteMessage}"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
            </Grid>
        </Grid>
    </Border>
</Page>
