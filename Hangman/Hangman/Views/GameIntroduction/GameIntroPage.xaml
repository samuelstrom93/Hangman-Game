<Page x:Class="Hangman.Views.GameIntroPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hangman.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GameIntroPage">

    <Grid Background="#DADDD8" Height="500">
        <StackPanel>
            <TextBlock Margin="0,20,0,0" TextAlignment="Center" FontWeight="Bold" FontSize="30">Spelintroduktion</TextBlock>
            <TextBlock Margin="0,10,0,0" TextAlignment="Center" FontWeight="SemiBold" FontSize="20" FontStyle="Italic" >Rädda Gubben</TextBlock>
            <TextBlock Padding="15" Background="AliceBlue" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="394"><Run Text="Spelet baseras på det klassiska spelet Hänga Gubbe där användaren ställs inför utmaningen att gissa vilket ord på sex bokstäver som slumpats fram och genom detta rädda vår huvudkaraktär innan tio felgissningar har uppnåtts och möjligheten att rädda honom från att tappa greppet ifrån stången. "/><LineBreak/>
            <Run/>
                <!--<LineBreak></LineBreak>-->
            </TextBlock>
            <StackPanel Orientation="Horizontal">
                <Border BorderThickness="1" HorizontalAlignment="Left"  Margin="200,2,0,0" Height="175" Width="175">
                    <Border.Background>
                        <ImageBrush Viewport="0 0 1 1" ViewportUnits="RelativeToBoundingBox" ImageSource="/Assets/Images/hänggubbe1.png"/>
                    </Border.Background>
                </Border>
                <TextBlock Margin="2,3,0,0" Padding="15" Background="AliceBlue" TextWrapping="Wrap" Width="220">
                <Run Text="För varje fel gissning så tappar gubben greppet med ett finger i taget. På så sätt har du koll på när ditt spel tar slut. "></Run>
                </TextBlock>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center" Margin="0,8,15,0" FontWeight="DemiBold" FontSize="15">Sida 1/3</TextBlock>
                <Button Background="#D3D3D3" Content="Nästa sida" Margin="85,8,0,0" FontWeight="Bold" FontSize="15" Height="30" Width="150" Click="NextPage_Click"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
